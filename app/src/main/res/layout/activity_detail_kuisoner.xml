            android:text="pertanyaan6"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/judulPertanyaan7"
            android:layout_below="@id/pertanyaan6"
            android:layout_width="match_parent"
