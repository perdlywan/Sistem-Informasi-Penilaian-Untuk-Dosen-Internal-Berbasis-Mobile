<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary"
    tools:context=".DetailKuisoner">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/namaDosen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Perdly Setiawan"
                android:fontFamily="@font/lora_italic"
                android:textStyle="bold"
                android:textColor="@color/white"
                >
            </TextView>
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:elevation="36dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >

            <TextView
            android:id="@+id/judulPertanyaan1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:text="1. Kejelasan dalam menyampaikan materi perkuliahan:"
            android:fontFamily="@font/lora_bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/pertanyaan1"
            android:layout_below="@id/judulPertanyaan1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="pertanyaan1"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/judulPertanyaan2"
            android:layout_below="@id/pertanyaan1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="2. Sistematika penyampaian materi perkuliahan:"
            android:fontFamily="@font/lora_bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/pertanyaan2"
            android:layout_below="@id/judulPertanyaan2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="pertanyaan2"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/judulPertanyaan3"
            android:layout_below="@id/pertanyaan2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="3. Kemampuan mendorong mahasiswa untuk aktif dalam bertanya:"
            android:fontFamily="@font/lora_bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/pertanyaan3"
            android:layout_below="@id/judulPertanyaan3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="pertanyaan3"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/judulPertanyaan4"
            android:layout_below="@id/pertanyaan3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="4. Kemampuan menumbuhkan motivasi belajar mahasiswa:"
            android:fontFamily="@font/lora_bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/pertanyaan4"
            android:layout_below="@id/judulPertanyaan4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="pertanyaan4"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/judulPertanyaan5"
            android:layout_below="@id/pertanyaan4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
