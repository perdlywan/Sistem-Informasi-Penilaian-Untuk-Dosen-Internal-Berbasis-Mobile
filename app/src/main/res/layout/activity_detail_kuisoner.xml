            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="7. Kemampuan menggunakan strategi pembelajaran:"
            android:fontFamily="@font/lora_bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/pertanyaan7"
            android:layout_below="@id/judulPertanyaan7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:text="pertanyaan7"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/judulPertanyaan8"
            android:layout_below="@id/pertanyaan7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text="8. Kehadiran dosen memberi perkuliahan dalam satu semester:"
            android:fontFamily="@font/lora_bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/pertanyaan8"
            android:layout_below="@id/judulPertanyaan8"
